{
  "type": "module",
  "name": "prenota-azione",
  "version": "1.0.0",
  "private": true,
  "Author": "Dfems",
  "description": "Prenota Azione is a web application for managing reservations and appointments.",
  "workspaces": [
    "packages/shared",
    "packages/components",
    "packages/apps/*"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run gen:api",
    "gen:api": "ts-node --esm scripts/gen-openapi.ts && openapi-typescript openapi-spec/api.json --output packages/shared/src/generated/api-types.ts",
    "start": "concurrently \"npm run serve:backend\" \"npm run serve:frontend\"",
    "serve:backend": "cd packages/apps/backend && npm run start:dev",
    "serve:frontend": "cd packages/apps/main && npm run dev",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream && rimraf node_modules dist",
    "clean:modules": "rimraf node_modules && npx lerna clean --yes",
    "reinstall": "npm run clean:modules && npm run bootstrap",
    "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\"",
    "lint:cache": "rimraf .eslintcache",
    "format": "prettier --write .",
    "test": "jest --passWithNoTests",
    "prepare": "husky && husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lerna": "^8.2.2",
    "lint-staged": "^15.5.1",
    "openapi-typescript": "^7.6.1",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
