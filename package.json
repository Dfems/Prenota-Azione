{
  "name": "prenota-azione",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/components",
    "packages/apps/*"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run gen:api",
    "gen:api": "openapi-typescript ./openapi-spec/api.json --output packages/shared/src/generated/api-types.ts",
    "start": "concurrently \"npm run serve:backend\" \"npm run serve:frontend\"",
    "serve:backend": "cd packages/apps/backend && npm run start:dev",
    "serve:frontend": "cd packages/apps/main && npm run dev",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream && rimraf node_modules dist",
    "clean:modules": "rimraf node_modules && npx lerna clean --yes",
    "reinstall": "npm run clean:modules && npm install && npm run bootstrap",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write .",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "lerna": "^8.2.2",
    "openapi-typescript": "^7.6.1",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3"
  }
}
