{
  "extends": "../../../tsconfig.base.json", // <-- se hai un tsconfig.base, altrimenti sostituiscilo con "./tsconfig.json"
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true, // necessaria se il progetto Ã¨ referenziato da altri
    "module": "ESNext",
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/generated/**", "**/*.spec.ts", "node_modules"]
}
